{
    "crons": [
        {
            "path": "/api/send-scheduled-reports",
            "schedule": "0 0 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/",
            "has": [
                {
                    "type": "host",
                    "value": "(?:.*\\.)?vercel\\.app"
                }
            ]
        }
    ]
}