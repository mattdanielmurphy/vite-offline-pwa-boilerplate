{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, must-revalidate"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        }
    ],
    "TODO_REMOVE_BEFORE_PROD": {
        "note": "These headers disable caching - remove before production"
    },
    "crons": [
        {
            "path": "/api/send-scheduled-reports",
            "schedule": "0 0 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/",
            "has": [
                {
                    "type": "host",
                    "value": "(?:.*\\.)?vercel\\.app"
                }
            ]
        }
    ]
}